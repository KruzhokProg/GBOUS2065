<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminAccountFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AdminAccountFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp"
            android:background="?attr/appBarLayoutBackground">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolBar"
                app:layout_scrollFlags="enterAlways"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingRight="5dp">

                    <EditText
                        android:id="@+id/et_admin_search"
                        android:layout_width="0dp"
                        android:layout_height="?attr/actionBarSize"
                        android:background="@drawable/search_input_style"
                        android:drawableLeft="@drawable/ic_search_black_24dp"
                        android:hint="Поиск по приказам"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/switchMode"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Switch
                        android:id="@+id/switchMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:trackTint="#1E656D"
                        android:thumbTint="#00293C"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <!--                    <ImageButton-->
<!--                        android:id="@+id/img_btn_record_admin"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginRight="15dp"-->
<!--                        android:background="@color/card_bg_color"-->
<!--                        android:src="@drawable/ic_mic_black_24dp"-->
<!--                        app:layout_constraintBottom_toBottomOf="parent"-->
<!--                        app:layout_constraintEnd_toEndOf="parent"-->
<!--                        app:layout_constraintTop_toTopOf="parent"-->
<!--                        tools:layout_editor_absoluteY="7dp" />-->
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            android:background="?attr/rvBackground">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_admin_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:listitem="@layout/rv_item_admin_account"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:nestedScrollingEnabled="true"
                />

            <ProgressBar
                android:id="@+id/progress_bar_admin"
                style = "?android:attr/progressBarStyle"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_admin_data"
                android:indeterminateTint="?attr/pbColor"
                />
            <!--            app:layout_constraintTop_toBottomOf="@id/rv_news"-->
            <!--            "?android:attr/progressBarStyle"-->
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--    </androidx.core.widget.NestedScrollView>-->

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_choose_date_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:srcCompat="@drawable/ic_baseline_date_range_white"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="30dp"
            app:tint="?attr/floatButtonImageColor"
            app:backgroundTint="?attr/floatingButtonColor"
            />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</FrameLayout>