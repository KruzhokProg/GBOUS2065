            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="15dp"
            android:hint="Пароль"
            android:inputType="textPassword"
            android:textCursorDrawable="@drawable/color_cursor" />
