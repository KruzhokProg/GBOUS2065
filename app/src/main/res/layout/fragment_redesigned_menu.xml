<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RedesignedMenuFragment">


    <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
        android:id="@+id/imgvMenuFile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMenuDesc" />

    <TextView
        android:id="@+id/tvMenuDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_choose_date_for_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:clickable="true"
        app:backgroundTint="?attr/floatingButtonColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_baseline_date_range_white"
        app:tint="?attr/floatButtonImageColor" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_download_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="110dp"
        android:clickable="true"
        app:backgroundTint="?attr/floatingButtonColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_download_menu"
        app:tint="?attr/floatButtonImageColor" />

    <ProgressBar
        android:id="@+id/progress_bar_menu_loading"
        style="?android:attr/progressBarStyle"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:indeterminateTint="?attr/pbColor"
        app:layout_constraintBottom_toBottomOf="@+id/imgvMenuFile"
        app:layout_constraintEnd_toEndOf="@+id/imgvMenuFile"
        app:layout_constraintStart_toStartOf="@+id/imgvMenuFile"
        app:layout_constraintTop_toTopOf="@+id/imgvMenuFile" />

    <ImageView
        android:id="@+id/zoomMenuPreview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#20000000"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgvMenuFile"
        app:layout_constraintEnd_toEndOf="@+id/imgvMenuFile"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/imgvMenuFile"
        app:layout_constraintTop_toTopOf="@+id/imgvMenuFile"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/icon_zoom_touch" />
</androidx.constraintlayout.widget.ConstraintLayout>