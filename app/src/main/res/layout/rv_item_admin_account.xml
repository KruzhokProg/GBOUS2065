<!--                    android:layout_height="wrap_content"-->
<!--                    app:singleLine="true">-->
<!--                </com.google.android.material.chip.ChipGroup>-->
<!--                </HorizontalScrollView>-->

                <ImageView
                    android:id="@+id/imgvPieChart"
                    android:layout_width="54dp"
                    android:layout_height="53dp"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintBottom_toTopOf="@+id/tvAdminDocFunc"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_piechart" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/imgvArrowAdminDocExpand"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/tvDateAdmin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvTitleAdmin"
                app:srcCompat="@drawable/ic_arrow_down_black" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>