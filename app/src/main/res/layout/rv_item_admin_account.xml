<!--                    app:layout_constraintStart_toStartOf="@+id/chipGroupDocPlaces"-->
<!--                    app:layout_constraintTop_toBottomOf="@+id/chipGroupDocPlaces" />-->

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupDocFunc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintHorizontal_bias="0.501"
                    app:layout_constraintEnd_toEndOf="@id/tvAdminDocFunc"
                    app:layout_constraintStart_toStartOf="@id/tvAdminDocFunc"
                    app:layout_constraintTop_toBottomOf="@+id/tvAdminDocFunc">
                </com.google.android.material.chip.ChipGroup>

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupDocPlaces"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:layout_constraintEnd_toEndOf="@+id/tvAdminDocPlaces"
                    app:layout_constraintHorizontal_bias="0.501"
                    app:layout_constraintStart_toStartOf="@+id/tvAdminDocPlaces"
                    app:layout_constraintTop_toBottomOf="@+id/tvAdminDocPlaces">
<!--                    <com.google.android.material.chip.Chip-->
<!--                        android:id="@+id/chip7"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="Ш1"-->
<!--                        android:textColor="@color/white"-->
<!--                        app:chipBackgroundColor="#1E656D" />-->
                </com.google.android.material.chip.ChipGroup>

<!--                <HorizontalScrollView-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    app:singleLine="true"-->
<!--                    android:layout_marginTop="5dp"-->
<!--                    app:layout_constraintEnd_toEndOf="@+id/tvAdminDocReceivers"-->
<!--                    app:layout_constraintStart_toStartOf="@+id/tvAdminDocReceivers"-->
<!--                    app:layout_constraintTop_toBottomOf="@+id/tvAdminDocReceivers"-->
<!--                    app:layout_constraintBottom_toBottomOf="parent"-->
<!--                    android:layout_marginBottom="10dp">-->
